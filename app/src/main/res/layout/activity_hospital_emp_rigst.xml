<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".HOSIPTAL.hospital_emp_rigst">

    <EditText
        android:id="@+id/emp_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="الايميل"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/emp_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="رقم الجوال"
        android:inputType="phone"
        android:text="+967 "
        />


    <EditText
        android:id="@+id/emp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="اسم الموظف"
        android:inputType="text" />
    <EditText
        android:id="@+id/emp_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="الرقم لسري"
        android:inputType="textPassword" />


    <TextView
        android:id="@+id/emp_hopital"
        android:hint="اسم المستشفى"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


